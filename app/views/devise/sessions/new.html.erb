<div class="min-h-screen flex items-center justify-center mx-auto">
  <div class="max-w-sm w-full bg-[#3b3a30] md:border md:border-[#b39c6d] md:rounded-lg md:shadow-lg p-10">
    <h2 class="text-3xl text-[#faf8ef] font-bold text-center mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center space-x-3">
          <%= f.check_box :remember_me, class: 'bg-[#b3c100] text-[#3b3a30] rounded-lg h-5 w-5 focus:ring-[#b3c100]' %>
          <%= f.label :remember_me, class: 'text-[#faf8ef] text-lg font-semibold' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'w-full bg-[#b3c100] text-[#3b3a30] p-4 rounded-lg font-bold hover:bg-[#a3b100] transition focus:ring-2 focus:ring-[#b3c100]' %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-3">
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-[#b3c100] hover:underline text-lg' %><br />
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-[#b3c100] hover:underline text-lg' %><br />
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'text-[#b3c100] hover:underline text-lg' %>
    </div>
  </div>
</div>
