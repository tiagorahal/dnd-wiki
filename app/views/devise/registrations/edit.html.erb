<div class="min-h-screen flex items-center justify-center mx-auto">
  <div class="max-w-sm w-full bg-[#3b3a30] md:border md:border-[#b39c6d] md:rounded-lg md:shadow-lg p-10">
    <h2 class="text-3xl text-[#faf8ef] font-bold text-center mb-6">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'space-y-6' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-[#b3c100] mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %> 
        <i class="text-[#b39c6d]">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
        <% if @minimum_password_length %>
          <br />
          <em class="text-[#b39c6d]"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %> 
        <i class="text-[#b39c6d]">(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: 'w-full bg-[#b3c100] text-[#3b3a30] p-4 rounded-lg font-bold hover:bg-[#a3b100] transition focus:ring-2 focus:ring-[#b3c100]' %>
      </div>
    <% end %>

    <h3 class="text-[#faf8ef] text-lg font-bold mt-8">Cancel my account</h3>
    <div class="mb-6">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'w-full bg-[#b3c100] text-[#3b3a30] p-4 rounded-lg font-bold hover:bg-[#a3b100] transition focus:ring-2 focus:ring-[#b3c100]' %></div>

    <%= link_to "Back", :back, class: 'text-[#b3c100] hover:underline text-lg' %>
  </div>
</div>
