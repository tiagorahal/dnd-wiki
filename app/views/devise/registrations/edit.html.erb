<h2 style="color: #faf8ef;">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'bg-[#3b3a30] p-4 border border-[#b39c6d] rounded-md' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, style: "color: #faf8ef;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] rounded-md' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div style="color: #b3c100;">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, style: "color: #faf8ef;" %> <i style="color: #b39c6d;">(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] rounded-md' %>
    <% if @minimum_password_length %>
      <br />
      <em style="color: #b39c6d;"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, style: "color: #faf8ef;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] rounded-md' %>
  </div>

  <div class="field">
    <%= f.label :current_password, style: "color: #faf8ef;" %> <i style="color: #b39c6d;">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] rounded-md' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'bg-[#b3c100] text-[#3b3a30] p-2 rounded-md' %>
  </div>
<% end %>

<h3 style="color: #faf8ef;">Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'bg-[#b3c100] text-[#3b3a30] p-2 rounded-md' %></div>

<%= link_to "Back", :back, style: 'color: #b3c100;' %>
