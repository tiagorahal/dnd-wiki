<div class="min-h-screen flex items-center justify-center mx-auto">
  <div class="max-w-sm w-full bg-[#3b3a30] md:border md:border-[#b39c6d] md:rounded-lg md:shadow-lg p-10">
    <h2 class="text-3xl text-[#faf8ef] font-bold text-center mb-6">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-6' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password", class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %>
        <% if @minimum_password_length %>
          <em class="text-[#b39c6d]">(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password", class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: 'w-full bg-[#b3c100] text-[#3b3a30] p-4 rounded-lg font-bold hover:bg-[#a3b100] transition focus:ring-2 focus:ring-[#b3c100]' %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
