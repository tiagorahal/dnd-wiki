<h2 style="color: #faf8ef;">Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'bg-[#3b3a30] p-4 border border-[#b39c6d] rounded-md' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, style: "color: #faf8ef;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] rounded-md' %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: 'bg-[#b3c100] text-[#3b3a30] p-2 rounded-md' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
