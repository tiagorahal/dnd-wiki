<div class="min-h-screen flex items-center justify-center mx-auto">
  <div class="max-w-sm w-full bg-[#3b3a30] md:border md:border-[#b39c6d] md:rounded-lg md:shadow-lg p-10">
    <h2 class="text-3xl text-[#faf8ef] font-bold text-center mb-6">Resend confirmation instructions</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'text-[#faf8ef] block text-lg font-semibold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full bg-[#7d5a50] text-[#faf8ef] border border-[#b39c6d] p-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#b3c100]' %>
      </div>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions", class: 'w-full bg-[#b3c100] text-[#3b3a30] p-4 rounded-lg font-bold hover:bg-[#a3b100] transition focus:ring-2 focus:ring-[#b3c100]' %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
